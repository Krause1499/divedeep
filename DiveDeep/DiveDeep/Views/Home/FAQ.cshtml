@{
    ViewData["Title"] = "FAQ";
}

<div class="container my-5">
    <div class="row">
        <!-- FAQ Accordion (venstre kolonne) -->
        <div class="col-md-6">
            <h2 class="mb-4">Ofte stillede spørgsmål</h2>
            <div class="accordion" id="faqAccordion">
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingOne">
                        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne">
                            Hvordan fungerer leje af udstyr?
                        </button>
                    </h2>
                    <div id="collapseOne" class="accordion-collapse collapse show" data-bs-parent="#faqAccordion">
                        <div class="accordion-body">
                            Du vælger det udstyr, du ønsker at leje. Når bookingen er gennemført og bekræftet, afhenter du udstyret i butikken på den valgte startdato.
                            Vi sørger for, at alt er klar til dit dyk ved afhentning. Udstyret returneres igen i butikken på den valgte slutdato.
                        </div>
                    </div>
                </div>

                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingTwo">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo">
                            Hvordan modtager jeg udstyret, efter jeg har booket?
                        </button>
                    </h2>
                    <div id="collapseTwo" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                        <div class="accordion-body">
                            Udstyret skal afhentes i vores fysiske butik. Vi afsender altså ikke ordrer.
                        </div>
                    </div>
                </div>

                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingThree">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree">
                            Skal jeg selv vedligeholde udstyret?
                        </button>
                    </h2>
                    <div id="collapseThree" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                        <div class="accordion-body">
                            Nej – vi sørger for al vedligeholdelse, rengøring og service, så du altid får udstyr i topstand.
                        </div>
                    </div>
                </div>

                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingFour">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFour">
                            Kan jeg ændre eller aflyse min booking?
                        </button>
                    </h2>
                    <div id="collapseFour" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                        <div class="accordion-body">
                            Ja, du kan ændre eller aflyse din booking op til 24 timer før afhentning uden ekstra omkostninger.
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Kontaktformular (højre kolonne) -->
        <div class="col-md-6">
            <h2 class="mb-2">Har du et andet spørgsmål?</h2>
            <h5 class="mb-3 text-secondary">Tøv ikke med at kontakte os!</h5>
            <form method="post" asp-action="SendQuestion" asp-controller="Faq">
                <div class="mb-3">
                    <label for="name" class="form-label">Navn:</label>
                    <input type="text" class="form-control" id="name" name="Name" required />
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">E-mail:</label>
                    <input type="email" class="form-control" id="email" name="Email" required />
                </div>
                <div class="mb-3">
                    <label for="question" class="form-label">Dit spørgsmål:</label>
                    <textarea class="form-control" id="question" name="Question" rows="4" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Indsend</button>
            </form>
        </div>
    </div>
</div>
